contentType = "text/html; chaset = UTF-8"
pageEncoding = "UTF - 8"%>
<%@ taglib uri = "http://java.sun.com/jsp/jst1/core" prefix = "c" %>
<!DOCTYPE html>
<html>
<head>
    <meta charset = "UTF-8">
    <title>Movie Search Results</title></head><body
<h1>Movie Search Results</h1>

<c:if test ="${empty movies}">
    <p> No movies found. </p>
</c:if>

<c:forEach var = "movie" items = "${movies}">
  <div>
      <h2>${movie.title}</h1>
      <p>Release Year: $
{movie.releaseYear}</p>
        <p>Director: ${movie.director}</p>
        <p>Genre:${movie.genre}</p>
      </div>
    </c:forEach>
</body>
</html>
